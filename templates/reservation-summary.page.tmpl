{{template "base" .}}

{{define "content"}}
{{$reservation := index .Data "reservation"}}
<div class="container">
    <div class="row">
        <div class="col">
            <h1 class="mt-5">Reservation Summary</h1>

            <hr>
            <table class="table table-striped">
                <thead>



                </thead>

                <tbody>
                <tr>
                    <td>Name</td>
                    <td>{{$reservation.FirstName}} {{$reservation.LastName}}</td>
                </tr>
                <tr>
                <td>Arrival</td><td>Arrival</td>
                </tr>
                <tr>
                <td>Departure</td> <td>Departure</td>
                </tr>
                <tr>
                <td>Email</td> <td>{{$reservation.Email}}</td>
                </tr>
                <tr>
                <td>Phone</td><td>{{$reservation.Phone}}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
{{end}}
